<h1 class="setting_title">設定画面</h1>
<%= render 'shared/setting_nav_menu' %>
<div class="name_list">
    <h1 class="bussines_title">
        経費名一覧
    </h1>
    <div class="id_name top">
        <p class="id id_main">ID</p>
        <p class="id">名称</p>
        <%= link_to '新規追加', new_expense_category_path, class: 'supplier_new' %>
    </div>
    <% if @expenses.present? %>
        <% @expenses.each do |expense| %>
            <div class="id_name">
                <p class="id id_main"><%= expense.id %></p>
                <p class="id"><%= expense.name %></p>

                <%= link_to '編集', edit_expense_category_path(expense), class: 'supplier_new edit_btn' %>
            </div>
        <% end %>
    <% else %>
        <p class="not_supplier">まだ経費名が登録されてません</p>
    <% end %>
</div>