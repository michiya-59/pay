<h1 class="setting_title">設定画面</h1>
<%= render 'shared/setting_nav_menu' %>
<div class="name_list">
    <h1 class="bussines_title">
        経費名一覧
    </h1>
    <div class="id_name top">
        <p class="id">ID</p>
        <p class="id">名称</p>
        <%= link_to '新規追加', new_user_expense_category_path(@current_user), class: 'supplier_new' %>
    </div>
    <% if @expenses.present? %>
        <% @expenses.each do |expense| %>
            <div class="id_name">
                <p class="id"><%= expense.id %></p>
                <p class="id"><%= expense.name %></p>
                <div class="destroy_btn">
                        <%= button_to user_expense_category_path(@current_user,expense), method: :delete, class: 'supplier_new delete_btn'  do %>
                            <span class="sign_in_out">削除</span>
                        <% end %>
                    </div>
                <%= link_to '編集', edit_user_expense_category_path(@current_user,expense), class: 'supplier_new edit_btn' %>
            </div>
        <% end %>
    <% else %>
        <p class="not_supplier">まだ本業名が登録されてません</p>
    <% end %>
</div>